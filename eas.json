{
  "cli": {
    "version": ">= 14.4.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  },

  "android": {
    "useNextNotificationsApi": true,
    "permissions": ["NOTIFICATIONS"]
  },
  "ios": {
    "supportsTablet": true,
    "infoPlist": {
      "UIBackgroundModes": ["remote-notification"]
    }
  }
}
